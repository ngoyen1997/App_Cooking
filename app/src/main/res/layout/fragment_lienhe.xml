<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_tieude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:text="Hòm thư góp ý"/>
    <LinearLayout
        android:id="@+id/lin1"
        android:layout_below="@id/tv_tieude"
        android:layout_width="150dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Họ tên : "/>
        <TextView
            android:id="@+id/id_diaChi"
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            android:text="Email : "/>
        <TextView
            android:id="@+id/id_sdt"
            android:layout_marginTop="27dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại : "/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/tv_tieude"
        android:layout_toRightOf="@+id/lin1"
        android:layout_width="250dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_ten"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="ten"/>
        <EditText
            android:id="@+id/edt_diaChi"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Email"/>
        <EditText
            android:id="@+id/edt_Sdt"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="So dien thoai"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tdgopy"
        android:layout_below="@id/lin1"
        android:layout_marginTop="20dp"
        android:text="Góp ý"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:layout_width="match_parent"

        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/tv_gopy"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tdgopy"
        android:hint="Bạn đang nghĩ gì"
        android:layout_width="match_parent"
        android:layout_height="250dp" />
    <Button
        android:id="@+id/btn_gopy"
        android:layout_below="@id/tv_gopy"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"/>

</RelativeLayout>