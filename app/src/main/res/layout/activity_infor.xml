<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.InforActivity">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:overScrollMode="always">


                <!--<android.support.v7.widget.Toolbar-->
                    <!--android:id="@+id/mytoolbar"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->
                <!--</android.support.v7.widget.Toolbar>-->
                <VideoView
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:id="@+id/videoView"
                     />
                <TextView
                    android:id="@+id/tv_txtTen"
                    android:background="#571A1B1B"
                    android:textSize="15dp"
                    android:textStyle="italic|bold"
                    android:textColor="#E53935"
                    android:layout_gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="3"
            android:background="#DC1E88E5"
            android:layout_marginTop="5dp"
            android:elevation="8dp"
            android:padding="8dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_like"
                android:layout_weight="1"
                android:background="#FCFCFC"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/like"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="0" />
            <Button
                android:id="@+id/dislike"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#FCFCFC"
                android:drawableLeft="@drawable/dislike"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="0" />

            <Button
                android:id="@+id/btn_share"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Share"
                android:drawableRight="@drawable/share"
                android:layout_gravity="center"
                android:background="#FCFCFC"
                android:textAlignment="center" />
        </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <!-- Content here -->
            <TextView
                android:id="@+id/tv_txtMota"
                android:elevation="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="15dp"
                android:textStyle="italic"
                android:textColor="#070707"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

    </ScrollView>




</LinearLayout>